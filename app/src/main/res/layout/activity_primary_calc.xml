        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.758" />

    <EditText
        android:id="@+id/damageInput"
        android:layout_width="107dp"
        android:layout_height="43dp"
        android:ems="10"
